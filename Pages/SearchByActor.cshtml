}


<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div class="form-group">
                <label asp-for="SearchByActor" class="control-label"></label>
                <input asp-for="SearchByActor" class="form-control" />
                <span asp-validation-for="SearchByActor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

<hr />

@if (Model.Episodes != null)
{
    <ul>
        @foreach (var episode in Model.Episodes)
        {
            <li>
                @episode.Title 

            </li>

        }

    </ul>
}